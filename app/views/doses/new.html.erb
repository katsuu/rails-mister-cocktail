<div class="form-container background-pink">
  <%= link_to cocktail_path(@cocktail) do %>
    <i class="fas fa-arrow-alt-circle-left back-btn"></i>
  <% end %>
  <h1>What do we need for your <%= @cocktail.name %>?</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description, label: false  %>
    <%= f.association :ingredient, label: false  %>
    <%= f.submit "Submit Dose", class: "btn-red" %>
  <% end %>
</div>
