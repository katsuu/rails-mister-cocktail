<div class='banner'>
  <h1>Tonight Jacqueline</h1>
  <div class="add-cocktail">
    <%= link_to new_cocktail_path do %>
      <i class="fas fa-plus"></i>
      <i class="fas fa-cocktail"></i>
    <% end %>
  </div>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>


<div class="cocktail-cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail), class: 'card-hover' do %>
      <div class="cocktail-card">
        <p><%= cocktail.name %></p>
      </div>
    <% end %>
  <% end %>
</div>

