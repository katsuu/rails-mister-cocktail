<div class="cocktail-page">
  <div class="side-image">
    <%= link_to root_path do %>
      <i class="fas fa-arrow-alt-circle-left back-btn"></i>
    <% end %>
  </div>
  <div class="cocktail">
    <div class="cocktail-details">
      <h1><%= @cocktail.name %></h1>

      <div class="ingredients">
        <h3>How to make a <%= @cocktail.name %>...</h3>
        <hr>
        <% @cocktail.doses.each do |dose| %>
          <div class="ingredient-item">
            <p><%= dose.ingredient.name %> - <%= dose.description %></p>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this?'}  do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <button class='add-ingredient-btn'>
      <%= link_to "Hmm, something is missing!", new_cocktail_dose_path(@cocktail) %>
    </button>
  </div>
</div>

